{
  "name": "photography-portfolio",
  "version": "1.0.0",
  "description": "Personal portfolio website",
  "author": "Pavlos Papadopoulos",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist/{css/*,js/*,images/*}",
    "autoprefixer": "postcss -u autoprefixer -r dist/css/*",
    "scss": "node-sass --output-style compressed -o dist/css src/scss/style.scss",
    "lint": "eslint src/js || true",
    "lint-scss": "stylelint src/scss/*.scss --syntax scss || true",
    "bundle-js": "mkdirp dist/js -p && browserify src/js/index.js | uglifyjs > dist/js/bundle.js",
    "imagemin": "imagemin src/images/* -o dist/images",
    "icons": "svgo -f src/images/icons -o dist/images/icons",
    "serve": "browser-sync start --server --files \"dist/css/*.css, dist/js/*.js, **/*.html, !node_modules/**/*.html\"",
    "build:css": "run-s lint-scss scss autoprefixer",
    "build:js": "run-s lint bundle-js",
    "build": "run-s build:*",
    "watch:css": "onchange \"src/scss\" -- run-s build:css",
    "watch:js": "onchange \"src/js\" -- run-s build:js",
    "watch": "run-p serve watch:*",
    "postinstall": "run-s build watch",
    "production": "run-s build"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "browser-sync": "^2.12.8",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.3.1",
    "eslint-plugin-import": "^2.7.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.5.2",
    "npm-run-all": "^4.0.2",
    "onchange": "^3.2.1",
    "postcss-cli": "^3.1.1",
    "rimraf": "^2.5.4",
    "stylelint": "^7.8.0",
    "svgo": "^1.0.3",
    "uglify-js": "^2.6.2"
  },
  "browserslist": [
    "Android 2.3",
    "Android >= 4",
    "Chrome >= 20",
    "Firefox >= 24",
    "Explorer >= 8",
    "iOS >= 6",
    "Opera >= 12",
    "Safari >= 6"
  ],
  "dependencies": {
    "baguettebox.js": "^1.8.2",
    "jquery": "^3.2.1",
    "picturefill": "^3.0.2"
  }
}
