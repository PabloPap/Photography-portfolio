{
  "name": "photography-portfolio",
  "version": "1.0.0",
  "description": "Personal portfolio website",
  "author": "Pavlos Papadopoulos",
  "license": "MIT",
  "main": "index.html",
  "scripts": {
    "eslint-check": "eslint --print-config . | eslint-config-prettier-check",
    "stylelint-check": "stylelint-config-prettier-check",
    "format": "prettier --write \"src/**/*.+(js|md|ts|css|scss|json)\"",
    "clean": "rimraf dist/{css/*,js/*}",
    "compile-sass": "node-sass --output-style=expanded --source-map=true src/scss/style.scss dist/css/style.css",
    "prefix": "postcss dist/css/style.css --use=autoprefixer --map=false --output=dist/css/style.css",
    "minify-css": "cleancss --source-map --source-map-inline-sources --output dist/css/style.css dist/css/style.css",
    "bundle-js": "mkdirp dist/js -p && browserify src/js/index.js -o dist/js/bundle.js",
    "uglify-js": "uglifyjs -o dist/js/bundle.js dist/js/bundle.js",
    "imagemin": "imagemin src/images/* -o dist/images",
    "icons": "svgo -f src/images/icons -o dist/images/icons",
    "serve": "browser-sync start --server \"dist\" --files \"dist/css/*.css, dist/js/*.js, **/*.html, !node_modules/**/*.html\"",
    "dev:css": "run-s compile-sass",
    "dev:js": "run-s bundle-js",
    "dev": "run-s dev:*",
    "watch:css": "onchange \"src/scss\" -- run-s dev:css",
    "watch:js": "onchange \"src/js\" -- run-s dev:js",
    "watch": "run-p serve watch:*",
    "prod:css": "run-s prefix minify-css",
    "prod:js": "run-s uglify-js",
    "prod": "run-s prod:*",
    "development": "run-s dev watch",
    "production": "run-s clean dev prod"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.8",
    "browser-sync": "^2.27.10",
    "browserify": "^17.0.0",
    "clean-css-cli": "^5.6.1",
    "eslint": "^8.22.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "mkdirp": "^1.0.4",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^10.0.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "stylelint": "^14.11.0",
    "stylelint-config-prettier": "^9.0.3",
    "svgo": "^2.8.0",
    "uglify-js": "^3.17.0"
  },
  "browserslist": [
    "Android 2.3",
    "Android >= 4",
    "Chrome >= 20",
    "Firefox >= 24",
    "Explorer >= 8",
    "iOS >= 6",
    "Opera >= 12",
    "Safari >= 6"
  ],
  "dependencies": {
    "baguettebox.js": "^1.11.1",
    "jquery": "^3.6.0",
    "node-sass": "^7.0.1",
    "picturefill": "^3.0.3"
  }
}
